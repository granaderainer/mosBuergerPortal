@model Concern

@{
    ViewData["Title"] = "Neues Anliegen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Neues Anliegen erstellen</h2>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateConcernAsync" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoriesList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Anlegen" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>
